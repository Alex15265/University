<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="connection.url">jdbc:postgresql://127.0.0.1:5432/university</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">universityadmin</property>
        <property name="connection.password">1234</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="show_sql">false</property>

        <mapping class="com.foxminded.university.dao.entities.ClassRoom"/>
        <mapping class="com.foxminded.university.dao.entities.Course"/>
        <mapping class="com.foxminded.university.dao.entities.Professor"/>
        <mapping class="com.foxminded.university.dao.entities.Student"/>
        <mapping class="com.foxminded.university.dao.entities.Group"/>
        <mapping class="com.foxminded.university.dao.entities.LessonTime"/>
        <mapping class="com.foxminded.university.dao.entities.Lesson"/>


    </session-factory>
</hibernate-configuration>
